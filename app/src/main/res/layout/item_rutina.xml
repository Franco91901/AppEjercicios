<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="16dp"
    android:backgroundTint="@color/transblack"
    app:cardCornerRadius="20dp"
    app:cardUseCompatPadding="false"
    app:cardPreventCornerOverlap="false"
    app:cardElevation="0dp"
    android:elevation="0dp"
    android:outlineProvider="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvNombreRutina"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Rutina A"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btnEditarRutina"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_editar"
                app:tint="@color/white" />

            <ImageButton
                android:id="@+id/btnEliminarRutina"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_eliminar_tacho"
                app:tint="@color/white" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvDescripcionRutina"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text=""
            android:textColor="@color/white"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="40dp"
                android:layout_height="70dp"
                android:layout_margin="2dp"
                android:gravity="center"
                android:text="L"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:background="@color/gris" />

            <TextView
                android:layout_width="40dp"
                android:layout_height="70dp"
                android:layout_margin="2dp"
                android:gravity="center"
                android:text="M"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:background="@color/white" />

            <TextView
                android:layout_width="40dp"
                android:layout_height="70dp"
                android:layout_margin="2dp"
                android:gravity="center"
                android:text="M"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:background="@color/gris" />

            <TextView
                android:layout_width="40dp"
                android:layout_height="70dp"
                android:layout_margin="2dp"
                android:gravity="center"
                android:text="J"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:background="@color/white" />

            <TextView
                android:layout_width="40dp"
                android:layout_height="70dp"
                android:layout_margin="2dp"
                android:gravity="center"
                android:text="V"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:background="@color/white" />

            <TextView
                android:layout_width="40dp"
                android:layout_height="70dp"
                android:layout_margin="2dp"
                android:gravity="center"
                android:text="S"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:background="@color/white" />

            <TextView
                android:layout_width="40dp"
                android:layout_height="70dp"
                android:layout_margin="2dp"
                android:gravity="center"
                android:text="D"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:background="@color/white" />
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnComenzarRutina"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_gravity="center"
            android:text="Comenzar"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:cornerRadius="12dp"
            app:backgroundTint="@color/rojo"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
