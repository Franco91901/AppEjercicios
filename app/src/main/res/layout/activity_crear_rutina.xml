                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Header clickeable -->
                    <LinearLayout
                        android:id="@+id/headerDomingo"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="12dp"
                        android:background="@color/gris"
                        android:clickable="true"
                        android:focusable="true">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Domingo"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="@color/black"/>

                        <ImageView
                            android:id="@+id/ivExpandirContraerDomingo"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_expandir"
                            app:tint="@color/black"/>
                    </LinearLayout>

                    <!-- Ocultar/Expandir -->
                    <LinearLayout
                        android:id="@+id/contenedorDomingo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:padding="12dp">

                        <!-- Ejercicio -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingVertical="4dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Ejercicio 1"
                                android:textColor="@color/black"
                                android:textStyle="bold"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="10x12"
                                android:layout_marginEnd="12dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="4 ser"
                                android:layout_marginEnd="12dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="60s"
                                android:layout_marginEnd="12dp"/>

                            <ImageButton
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_eliminar_equis"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                app:tint="@color/rojo"/>
                        </LinearLayout>

                        <!-- Botónes para agregar actividad -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_marginTop="8dp">

                            <Button
                                android:id="@+id/btnAgregarEjercicioDomingo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Agregar Ejercicio"
                                android:textStyle="bold"
                                android:layout_marginHorizontal="10dp"
                                android:backgroundTint="@color/rojo"
                                android:textColor="@color/white"/>

                            <Button
                                android:id="@+id/btnAgregarDescansoDomingo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Agregar Descanso"
                                android:textStyle="bold"
                                android:layout_marginHorizontal="10dp"
                                android:backgroundTint="@color/gris"
                                android:textColor="@color/black"/>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/llBotones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:gravity="center">

                <Button
                    android:id="@+id/btnCancelarRutina"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancelar"
                    android:textStyle="bold"
                    android:layout_marginVertical="12dp"
                    android:layout_marginHorizontal="15dp"
                    android:backgroundTint="@color/black"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/btnGuardarRutina"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Guardar Rutina"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginVertical="12dp"
                    android:layout_marginHorizontal="15dp"
                    android:backgroundTint="@color/verde" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>