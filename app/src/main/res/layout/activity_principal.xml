<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".principalActivity"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clHeaderRutinas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="8dp">

        <TextView
            android:id="@+id/tvMisRutinas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MIS RUTINAS"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <Button
            android:id="@+id/btnAgregarRutina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agregar Rutina"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:backgroundTint="@color/rojo"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            app:layout_constraintTop_toTopOf="@id/tvMisRutinas"
            app:layout_constraintBottom_toBottomOf="@id/tvMisRutinas"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:id="@+id/svRutinas"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/clHeaderRutinas"
        app:layout_constraintBottom_toTopOf="@id/menu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/llRutinas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="17dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@color/transblack"
                app:cardCornerRadius="20dp"
                app:cardUseCompatPadding="false"
                app:cardPreventCornerOverlap="false"
                app:cardElevation="0dp"
                android:elevation="0dp"
                android:outlineProvider="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <!-- Nombre de la rutina y botones editar/eliminar -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvNombreRutina"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Rutina A"
                            android:textColor="@color/white"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <ImageButton
                            android:id="@+id/btnEditarRutina"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@color/transparente"
                            android:src="@drawable/ic_editar"
                            app:tint="@color/white" />

                        <ImageButton
                            android:id="@+id/btnEliminarRutina"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@color/transparente"
                            android:src="@drawable/ic_eliminar_tacho"
                            app:tint="@color/white" />
                    </LinearLayout>

                    <!-- Progreso y meta -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvProgresoRutina"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Progreso: 3 días"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tvMetaRutina"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Meta: 5 días"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="italic" />
                    </LinearLayout>

                    <!-- Dias de la semana -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="70dp"
                            android:layout_margin="2dp"
                            android:gravity="center"
                            android:text="L"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:background="@color/verde" />

                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="70dp"
                            android:layout_margin="2dp"
                            android:gravity="center"
                            android:text="M"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:background="@color/rojo" />

                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="70dp"
                            android:layout_margin="2dp"
                            android:gravity="center"
                            android:text="M"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:background="@color/gris" />

                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="70dp"
                            android:layout_margin="2dp"
                            android:gravity="center"
                            android:text="J"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:background="@color/white" />

                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="70dp"
                            android:layout_margin="2dp"
                            android:gravity="center"
                            android:text="V"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:background="@color/white" />

                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="70dp"
                            android:layout_margin="2dp"
                            android:gravity="center"
                            android:text="S"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:background="@color/white" />

                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="70dp"
                            android:layout_margin="2dp"
                            android:gravity="center"
                            android:text="D"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:background="@color/white" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/btnComenzarRutina"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Comenzar"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:backgroundTint="@color/rojo"
                        android:paddingVertical="10dp"
                        android:layout_gravity="center"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <!-- Menú -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        app:labelVisibilityMode="labeled"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:menu="@menu/menu_inf_nav"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
